
<div class="container sign-form form">
  <div class="col-xs-4 col-md-offset-3">
    <hgroup>
      <h1>Sign Up</h1>
    </hgroup>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field group">
        <%= f.text_field :name, autofocus: true %>
        <span class="highlight"></span><span class="bar"></span>
        <%= f.label :name %>
      </div>
      <div class="field group">
        <%= f.email_field :email, autofocus: true %>
          <span class="highlight"></span><span class="bar"></span>
        <%= f.label :email %>
      </div>

<%# Will only diplsay the password fields if the user password is required i.e will be hidden if a user signs in via twitter %>

    <% if f.object.password_required? %>
      <div class="field group">
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "off" %>
          <span class="highlight"></span><span class="bar"></span>
          <%= f.label :password, "Password (#{@minimum_password_length} characters minimum)" %>
        <% end %>
      </div>

      <div class="field group">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <span class="highlight"></span><span class="bar"></span>
        <%= f.label :password_confirmation %>
      </div>
    <% end %>

      <div class="actions">
        <%= f.submit "Sign up", :class =>'submit' %>
      </div>
    <% end %>

  </div>
</div>
