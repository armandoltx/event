<!-- DIV : CALENDAR -->
<div class="container">
    <div class="row">
        <section class="col-xs-12 col-md-6">
          <%= render 'calendar' %>
        </section>

        <section class="col-xs-12 col-md-6">
          <%= render 'show_events_from_calendar' %>
        </section>
</div>

</div>
