<div class="container sign-form form">
    <div class="col-xs-4 col-md-offset-3">
      <hgroup>
        <h1>New Event</h1>
      </hgroup>
        <%= form_for @occasion, :html => {:multipart => true} do |f|%>
        <div class="group">
            <%= f.text_field :title %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :title  %>
        </div>

        <div class="group">
            <%= f.text_field :date_start %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :date_start  %>
        </div>

        <div class="group">
            <%= f.label :date_end  %>
            <%= f.text_field :date_end %>
        </div>

        <div class="group">
            <%= f.label :description  %>
            <%= f.text_field :description %>
        </div>

        <div>
            <%= cl_image_tag(@occasion.cloudinary_image) %>
            <%# To display cloudinary image %>
        </div>

        <div class="group">
            <%= f.label :location  %>
            <br>
            <%= f.text_field :location %><br>

        </div>

        <div class="">
            <%= f.label :website  %>
            <%= f.text_field :website %>
        </div>

        <div class="">
            <%= f.label :email  %>
            <%= f.text_field :email %>
        </div>

        <%= f.submit "Sign up", :class => 'submit' %>
        <% end %>
    </div>
</div>
