<div class="container sign-form form">
    <div class="col-xs-4 col-md-offset-3">
      <hgroup>
        <h1>New Event</h1>
      </hgroup>
        <%= form_for @occasion, :html => {:multipart => true} do |f|%>
        <div class="group">
            <%= f.text_field :title %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :title %>
        </div>

        <div class="group">
            <%= f.text_field :date_start, class:"datepicker" %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :date_start  %>
        </div>

        <div class="group">

            <%= f.text_field :date_end %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :date_end, class:"datepicker" %>
        </div>

        <div class="group">
            <%= f.text_field :description %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :description  %>
        </div>

        <div class="group">
          <%= f.text_field :image %>
            <%= cl_image_tag(@occasion.cloudinary_image) %>
            <%# To display cloudinary image %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :image  %>
        </div>

        <div class="group">
            <%= f.text_field :location %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :location  %>
        </div>

        <div class="group">
            <%= f.text_field :website %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :website  %>
        </div>

        <div class="group">
            <%= f.text_field :email %>
            <span class="highlight"></span><span class="bar"></span>
            <%= f.label :email  %>
        </div>

        <%= f.submit "Sign up", :class => 'submit' %>
        <% end %>
    </div>
</div>
