
<%= form_for @occasion, :html => {:multipart => true} do |f|%>
  <%= f.label :title  %> <br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :date  %> <br>
  <%= f.text_field :date %><br>
  <br>
  <%= f.label :description  %> <br>
  <%= f.text_field :description %><br>
  <br>
  <%= f.label :image  %> <br>
  <%= cl_image_upload_tag :image %> <%# For cloudinary image upload %>
  <br>
  <%= f.label :website  %> <br>
  <%= f.text_field :website %><br>
  <br>
  <%= f.label :email  %> <br>
  <%= f.text_field :email %><br>
  <br>
  <%= f.submit %>
<% end %>
