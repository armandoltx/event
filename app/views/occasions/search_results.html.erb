<div class="container search-results-wrapper">
  <div class="row">
    <div class="col-md-7 show-events">
      <h2>Search Results for '<%= @search_term %>'</h2>

      <% if @found_occasions.empty? %>
          <p>No result found</p>
      <% end %>

      <% @found_occasions.each do |occasion| %>
            <h2><%= occasion.title %></h2>
            <div><%= truncate(occasion.description, :length => 80) %></div>
            <!-- show only a snip of the full length of description to 40 charactors -->
            <br>
            <%= link_to "Read full description", occasion_path(occasion.id) %>
      <% end  %>
    </div><!-- end col-md-7 -->
    <div class="col-md-5">
      <%= render 'search_occasion_form' %>
      <%= render 'calendar'%>
    </div><!-- end col-md-5 -->
  </div><!-- end row -->
</div><!-- end container -->
